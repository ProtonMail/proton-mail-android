<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layoutOpenInProtonCalendar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/message_action_gray">

    <Button
        android:id="@+id/textView"
        style="@style/MessageOpenInProtonCalendarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:clickable="false"
        android:paddingEnd="26dp"
        android:text="@string/button_open_in_proton_calendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:srcCompat="@drawable/ic_external_link"
        app:tint="@color/icon_purple" />


</androidx.constraintlayout.widget.ConstraintLayout>
