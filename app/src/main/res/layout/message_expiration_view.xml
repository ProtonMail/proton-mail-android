<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/hide_view"
        android:layout_width="@dimen/compose_message_button_width"
        android:layout_height="match_parent"
        android:background="@drawable/new_purple_selector"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/expiration_compose_white" />

    <TextView
        android:id="@+id/expiration_time"
        style="@style/MessageExpirationText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="@string/define_expiration_period" />

    <ImageButton
        android:id="@+id/reset"
        android:layout_width="@dimen/compose_message_button_width"
        android:layout_height="match_parent"
        android:background="@drawable/compose_message_button_selector"
        android:contentDescription="@null"
        android:src="@drawable/exclude" />

</merge>
